<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css" />
  <link rel="stylesheet" href="http://heyman.github.io/leaflet-areaselect/src/leaflet-areaselect.css" />
</head>
<body>
<div id="map" style="width: 100%;height: 450px;margin: 0 auto"></div>
<div id="result">
  <div class="left">
    South west:<br>
    <input type="text" class="sw" style="width: 350px"><br>

    North east:<br>
    <input type="text" class="ne" style="width: 350px">

    <button id="remove">Remove</button>
  </div>
  <div class="right">
    Width:<br>
    <input type="text" class="width" /><br>

    Height:<br>
    <input type="text" class="height" />
    <button id="setDimensions">Set Dimensions</button>
  </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script src="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js"></script>
<script src="http://heyman.github.io/leaflet-areaselect/src/leaflet-areaselect.js"></script>
<script>
  // initialize map
  var map =L.map('map').setView([51.505, -0.09], 13);
  L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  var areaSelect = L.areaSelect({width:200, height:250});
  areaSelect.on("change", function() {
    var bounds = this.getBounds();
    $("#result .sw").val(bounds.getSouthWest().lat + ", " + bounds.getSouthWest().lng);
    $("#result .ne").val(bounds.getNorthEast().lat + ", " + bounds.getNorthEast().lng);
  });
  areaSelect.addTo(map);

  L.marker([51.5, -0.09]).addTo(map)
          .bindPopup("<b>Hello world!</b><br />I am a popup.").openPopup();

  L.circle([51.508, -0.11], 500, {
    color: 'red',
    fillColor: '#f03',
    fillOpacity: 0.5
  }).addTo(map).bindPopup("I am a circle.");

  L.polygon([
    [51.509, -0.08],
    [51.503, -0.06],
    [51.51, -0.047]
  ]).addTo(map).bindPopup("I am a polygon.");

  var popup = L.popup();
  function onMapClick(e) {
    popup.setLatLng(e.latlng).setContent("You clicked the map at " + e.latlng.toString()).openOn(map);
  }
  map.on('click', onMapClick);

  $("#remove").click(function() {
    areaSelect.remove();
  });

  $("#setDimensions").click(function () {
    areaSelect.setDimensions({width: $('.width').val(), height: $('.height').val()})
  })
</script>
</body>